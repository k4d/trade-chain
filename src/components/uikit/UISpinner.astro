---
import UIKitGroup from "@/components/uikit/UIKitGroup.astro";
import Spinner from "@/components/ui/Spinner.astro";
---

<UIKitGroup title="Small size">
	<Spinner size="s" color="lightgray" />
	<Spinner size="s" color="gray" />
	<Spinner size="s" color="green" />
	<Spinner size="s" color="blue" />
	<Spinner size="s" color="red" />
</UIKitGroup>

<UIKitGroup title="Medium size">
	<Spinner size="m" color="lightgray" />
	<Spinner size="m" color="gray" />
	<Spinner size="m" color="green" />
	<Spinner size="m" color="blue" />
	<Spinner size="m" color="red" />
</UIKitGroup>

<UIKitGroup title="Large size">
	<Spinner size="l" color="lightgray" />
	<Spinner size="l" color="gray" />
	<Spinner size="l" color="green" />
	<Spinner size="l" color="blue" />
	<Spinner size="l" color="red" />
</UIKitGroup>

---
import UIKitGroup from "@/components/uikit/UIKitGroup.astro";
import Alerts from "@/components/ui/Alerts.astro";
---

<UIKitGroup>
	<Alerts variant="primary">Primary Alert</Alerts>
	<Alerts variant="secondary">Secondary Alert</Alerts>
	<Alerts variant="danger">Danger Alert</Alerts>
	<Alerts variant="warning">Warning Alert</Alerts>
</UIKitGroup>

<UIKitGroup>
	<Alerts variant="success">Success Alert</Alerts>
	<Alerts variant="info">Info Alert</Alerts>
	<Alerts variant="light">Light Alert</Alerts>
	<Alerts variant="dark">Dark Alert</Alerts>
</UIKitGroup>

<UIKitGroup title="Outline alerts">
	<Alerts variant="outline-primary">Outline Primary Alert</Alerts>
	<Alerts variant="outline-secondary">Outline Secondary Alert</Alerts>
	<Alerts variant="outline-danger">Outline Danger Alert</Alerts>
	<Alerts variant="outline-warning">Outline Warning Alert</Alerts>
</UIKitGroup>

<UIKitGroup>
	<Alerts variant="outline-success">Outline Success Alert</Alerts>
	<Alerts variant="outline-info">Outline Info Alert</Alerts>
	<Alerts variant="outline-light">Outline Light Alert</Alerts>
	<Alerts variant="outline-dark">Outline Dark Alert</Alerts>
</UIKitGroup>

<UIKitGroup
	title="Gradient alerts"
	description="Assuming gradient variants are applicable to alerts"
>
	<Alerts variant="gradient-blue">Gradient Blue Alert</Alerts>
	<Alerts variant="gradient-green">Gradient Green Alert</Alerts>
	<Alerts variant="gradient-red">Gradient Red Alert</Alerts>
</UIKitGroup>

---
import UIKitGroup from "@/components/uikit/UIKitGroup.astro";
import Input from "@/components/ui/form/Input.astro";
---

<UIKitGroup>
	<Input
		type="text"
		name="default-text-input"
		placeholder="Enter your text"
		label="Default Text Input"
		helperText="Default message text"
	/>

	<Input
		type="text"
		name="error-text-input"
		placeholder="Enter error text"
		variant="error"
		label="Error Text Input"
		errorText="Error message text"
	/>

	<Input
		type="text"
		name="warning-text-input"
		placeholder="Enter warning text"
		variant="warning"
		label="Warning Text Input"
		warningText="Warning message text"
	/>

	<Input
		type="text"
		name="success-text-input"
		placeholder="Enter success text"
		variant="success"
		label="Success Text Input"
		successText="Success message text"
	/>

	<Input
		type="text"
		name="readonly-text-input"
		readonly="readonly"
		placeholder="Readonly text"
		value="Readonly text"
		label="Readonly Text Input"
	/>
</UIKitGroup>

<UIKitGroup title="Disabled Inputs">
	<Input
		type="text"
		name="disabled-text-input"
		disabled="disabled"
		placeholder="Enter your text"
		value="Disabled value"
		helperText="Default message text"
	/>

	<Input
		type="text"
		name="error-text-input"
		placeholder="Enter error text"
		variant="error"
		errorText="Error message text"
		disabled="disabled"
		value="Disabled error value"
	/>

	<Input
		type="text"
		name="warning-text-input"
		placeholder="Enter warning text"
		variant="warning"
		warningText="Warning message text"
		disabled="disabled"
		value="Disabled warning value"
	/>

	<Input
		type="text"
		name="success-text-input"
		placeholder="Enter success text"
		variant="success"
		successText="Success message text"
		disabled="disabled"
		value="Disabled success text"
	/>
</UIKitGroup>

<UIKitGroup title="Extra Small Inputs">
	<Input
		type="text"
		name="default-text-input"
		placeholder="Enter your text"
		size="xs"
	/>

	<Input
		type="text"
		name="error-text-input"
		placeholder="Enter error text"
		variant="error"
		size="xs"
	/>

	<Input
		type="text"
		name="warning-text-input"
		placeholder="Enter warning text"
		variant="warning"
		size="xs"
	/>

	<Input
		type="text"
		name="success-text-input"
		placeholder="Enter success text"
		variant="success"
		size="xs"
	/>

	<Input
		type="text"
		name="readonly-text-input"
		readonly="readonly"
		placeholder="Readonly text"
		value="Readonly text"
		size="xs"
	/>
</UIKitGroup>

<UIKitGroup title="Small Inputs">
	<Input
		type="text"
		name="default-text-input"
		placeholder="Enter your text"
		size="s"
	/>

	<Input
		type="text"
		name="error-text-input"
		placeholder="Enter error text"
		variant="error"
		size="s"
	/>

	<Input
		type="text"
		name="warning-text-input"
		placeholder="Enter warning text"
		variant="warning"
		size="s"
	/>

	<Input
		type="text"
		name="success-text-input"
		placeholder="Enter success text"
		variant="success"
		size="s"
	/>

	<Input
		type="text"
		name="readonly-text-input"
		readonly="readonly"
		placeholder="Readonly text"
		value="Readonly text"
		size="s"
	/>
</UIKitGroup>

<UIKitGroup title="Large Inputs">
	<Input
		type="text"
		name="default-text-input"
		placeholder="Enter your text"
		size="l"
	/>

	<Input
		type="text"
		name="error-text-input"
		placeholder="Enter error text"
		variant="error"
		size="l"
	/>

	<Input
		type="text"
		name="warning-text-input"
		placeholder="Enter warning text"
		variant="warning"
		size="l"
	/>

	<Input
		type="text"
		name="success-text-input"
		placeholder="Enter success text"
		variant="success"
		size="l"
	/>

	<Input
		type="text"
		name="readonly-text-input"
		readonly="readonly"
		placeholder="Readonly text"
		value="Readonly text"
		size="l"
	/>
</UIKitGroup>

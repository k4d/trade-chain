---
import UIKitGroup from "@/components/uikit/UIKitGroup.astro";
import Badges from "@/components/ui/Badges.astro";
---

<UIKitGroup>
	<Badges variant="primary">Primary Badge</Badges>
	<Badges variant="secondary">Secondary Badge</Badges>
	<Badges variant="danger">Danger Badge</Badges>
	<Badges variant="warning">Warning Badge</Badges>
	<Badges variant="success">Success Badge</Badges>
	<Badges variant="info">Info Badge</Badges>
	<Badges variant="light">Light Badge</Badges>
	<Badges variant="dark">Dark Badge</Badges>
</UIKitGroup>

<UIKitGroup title="Outline badges">
	<Badges variant="outline-primary">Outline Primary Badge</Badges>
	<Badges variant="outline-secondary">Outline Secondary Badge</Badges>
	<Badges variant="outline-danger">Outline Danger Badge</Badges>
	<Badges variant="outline-warning">Outline Warning Badge</Badges>
	<Badges variant="outline-success">Outline Success Badge</Badges>
	<Badges variant="outline-info">Outline Info Badge</Badges>
	<Badges variant="outline-light">Outline Light Badge</Badges>
	<Badges variant="outline-dark">Outline Dark Badge</Badges>
</UIKitGroup>

<UIKitGroup title="Gradient Badge">
	<Badges variant="gradient-blue">Gradient Blue Badge</Badges>
	<Badges variant="gradient-green">Gradient Green Badge</Badges>
	<Badges variant="gradient-red">Gradient Red Badge</Badges>
</UIKitGroup>
